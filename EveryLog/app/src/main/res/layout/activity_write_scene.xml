<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fffbe2"
    tools:context=".write_scene">

    <LinearLayout
        android:id="@+id/reviewWriteLayout"
        android:layout_width="356dp"
        android:layout_height="500dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="150dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/hashtagLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/writescreen_top"
            android:orientation="horizontal"
            android:padding="4dp">

            <Button
                android:id="@+id/DiaryWriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/writescreen_btn"
                android:fontFamily="@font/gangwon"
                android:text="일기"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Button
                android:id="@+id/ReviewWriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/writescreen_btn"
                android:fontFamily="@font/gangwon"
                android:text="리뷰"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Button
                android:id="@+id/TravelWriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/writescreen_btn"
                android:fontFamily="@font/gangwon"
                android:text="여행"
                android:textColor="@color/black"
                android:textSize="22dp" />

            <Button
                android:id="@+id/StudyWriteBtn"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_margin="12dp"
                android:layout_weight="1"
                android:background="@drawable/writescreen_btn"
                android:fontFamily="@font/gangwon"
                android:text="공부"
                android:textColor="@color/black"
                android:textSize="22dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.1dp"
            android:background="@drawable/writescreen_middle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/gangwon"
                    android:hint="제목"
                    android:inputType="text"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textColorHint="#bcbcbc"
                    android:textSize="24dp" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:srcCompat="@tools:sample/avatars" />

                    <EditText
                        android:id="@+id/editReviewInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:ems="10"
                        android:fontFamily="@font/gangwon"
                        android:gravity="center"
                        android:hint="리뷰 대상 정보"
                        android:inputType="textMultiLine"
                        android:singleLine="false" />
                </LinearLayout>

                <com.willy.ratingbar.ScaleRatingBar
                    android:id="@+id/editRatingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <EditText
                    android:id="@+id/editTextReviewContent"
                    android:layout_width="250dp"
                    android:layout_height="500dp"
                    android:layout_marginLeft="53dp"
                    android:layout_marginBottom="10dp"
                    android:ems="10"
                    android:fontFamily="@font/gangwon"
                    android:gravity="top"
                    android:hint="리뷰 내용"
                    android:inputType="textMultiLine"
                    android:textColor="@color/black"
                    android:textColorHint="#bcbcbc" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hashtagLayout"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/writescreen_bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/reviewWriteLayout"
        app:layout_constraintBottom_toTopOf="@+id/reviewWritesubmitBtn">

    </LinearLayout>

    <Button
        android:id="@+id/reviewWritesubmitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="256dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="94dp"
        android:text="완료"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hashtagLayout"
        android:background="@drawable/btn_yellow"/>

</androidx.constraintlayout.widget.ConstraintLayout>
